mixin h2(en_text,jp_text)
    h2.h2-txt
        if en_text
            span.en= en_text
        if jp_text
            span.jp= jp_text

mixin pagination(paginated, position)
    nav.module-pagination(class=position aria-label='Pagination')
        ul.pagination
            li.pagination-previous.disabled Previous
            
            if paginated
                li.current
                    span.show-for-sr You're on page
                    |  1
                li
                    a(href='#', aria-label='Page 2') 2
                li
                    a(href='#', aria-label='Page 3') 3
                li
                    a(href='#', aria-label='Page 4') 4
                li.ellipsis
                li
                    a(href='#', aria-label='Page 12') 12
                li
                    a(href='#', aria-label='Page 13') 13

            li.pagination-next
                a(href='#', aria-label='Next page') Next
    